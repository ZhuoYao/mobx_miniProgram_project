/* pages/mine/bind.wxss */
.container {
	display: flex;
	flex-direction: column;
	align-items: center;
} 

.itemView{
	width: 90%;
	border-bottom: 1rpx solid #D9D9D9;
	display: flex;
	flex-direction: column;
	margin-top: 62rpx;
}

.titleText{
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
	color: #CFD0D6;
	letter-spacing: 0;
}

.input{
	font-family: PingFangSC-Regular;
	font-size: 36rpx;
	color: #333333;
	letter-spacing: 0;
	margin-top: 16rpx;
}

.yzm{
	font-family: PingFangSC-Regular;
	font-size: 28rpx;
	color: #2EB6AA;
	letter-spacing: 0.34rpx;
}

.inputView{
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
}

.btnView{
	width: 90%;
	height:96rpx;
	background: #2EB6AA;
	border-radius: 200rpx;
	margin-top: 40rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}

.btnText{
	font-family: PingFangSC-Regular;
	font-size: 32rpx;
	color: #FFFFFF;
	letter-spacing: 0;
}

.button-hover {
  background-color: rgb(158, 231, 213);
}